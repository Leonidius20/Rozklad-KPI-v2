<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TextAppearance" >
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TextAppearance.Primary" parent="TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Secondary" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/secondary_text</item>
        <item name="android:height">20dp</item>
    </style>

    <style name="TextAppearance.Toolbar.Expanded.Title" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Toolbar.Expanded.Subtitle" parent="TextAppearance">
        <item name="android:textSize">0dp</item>
    </style>

    <style name="Widget.Design.CollapsingToolbar.Subtitle" parent="Widget.Design.CollapsingToolbar">
        <item name="expandedSubtitleTextAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="collapsedSubtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
    </style>
</resources>
